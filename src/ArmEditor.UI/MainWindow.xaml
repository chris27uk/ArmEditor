<Window x:Class="ArmEditor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmEditor.UI"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:ArmEditor.UI.ViewModels"
        Title="MainWindow" Height="485.193" Width="706.76" Background="#215b7d">
    <Grid Margin="30" Background="White">
        <Border Padding="10">
            <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Label DockPanel.Dock="Top" VerticalAlignment="Top" Height="50" FontSize="24px" Foreground="#999999">Template Editor</Label>
                <TreeView VerticalAlignment="Stretch" ItemsSource="{Binding Components}">
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type vm:NodeWithChildrenViewModel}" ItemsSource="{Binding Children}">
                            <TextBlock Text="{Binding Path=Name}"></TextBlock>
                        </HierarchicalDataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </DockPanel>
        </Border>
    </Grid>
</Window>
